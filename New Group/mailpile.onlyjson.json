{
    "app_icon": "image:logo",
    "app_name": "Mailpile",
    "font_styles": {
        "details": {
            "points": 10
        },
        "notification": {
            "italic": true
        },
        "splash": {
            "points": 16
        },
        "title": {
            "bold": true,
            "family": "normal",
            "points": 18
        }
    },
    "images": {
        "attention": "icons-%(theme)s/attention.png",
        "logged-in": "media/lock-open.svg",
        "logged-out": "media/lock-closed.svg",
        "logo": "media/logo-color.png",
        "new-setup": "media/new-setup.svg",
        "normal": "icons-%(theme)s/normal.png",
        "ra-off": "media/remote-access-off.svg",
        "ra-on": "media/remote-access-on.svg",
        "shutdown": "icons-%(theme)s/shutdown.png",
        "startup": "icons-%(theme)s/startup.png",
        "working": "icons-%(theme)s/working.png"
    },
    "indicator": {
        "initial_status": "startup",
        "menu_items": [
                       {
                       "args": {
                                "message": "The answer is not 42.",
                                "alert": true,
                       "actions": [
                                   {
                                   "op": "show_url",
                                   "args": ["https://example.com"]
                                   },
                                   {
                                   "op": "show_url",
                                   "args": ["https://example.org"]
                                   }
                                   ]
                                },
                       "id": "alert",
                       "label": "Alert",
                       "op": "notify_user",
                       "sensitive": true
                       },
                       {
                       "args": {
                       "status" : "new-setup",
                       "badge" : "1k"
                       },
                       "id": "badge 1k",
                       "label": "badge 1k",
                       "op": "set_status",
                       "sensitive": true
                       },
            {
                "id": "notification",
                "label": "Starting up",
                "sensitive": false
            },
            {
                "separator": true
            },
            {
                "args": [],
                "id": "main",
                "label": "Show Status Window",
                "op": "show_main_window",
                "sensitive": true
            },
                       {
                       "args": [],
                       "id": "main",
                       "label": "Hide Status Window",
                       "op": "hide_main_window",
                       "sensitive": true
                       },
            {
                "args": [
                    "http://localhost:33411/"
                ],
                "id": "browse",
                "label": "Open in Web Browser",
                "op": "show_url",
                "sensitive": false
            },
            {
                "args": {
                    "command": "screen -r -x mailpile",
                    "title": "mailpile"
                },
                "id": "screen",
                "label": "Open in Terminal",
                "op": "terminal",
                "sensitive": true
            },
            {
                "separator": true
            },
            {
                "args": [],
                "id": "quit",
                "label": "Quit GUI",
                "op": "quit",
                "sensitive": true
            }
        ]
    },
    "main_window": {
        "actions": [
            {
                "args": [
                    "http://localhost:33411/"
                ],
                "id": "open",
                "label": "Open in Web Browser",
                "op": "show_url",
                "position": "first"
            },
            {
                "id": "quit_button",
                "label": "Quit GUI",
                "op": "quit",
                "position": "last"
            }
        ],
        "background": "media/background.jpg",
        "close_quits": false,
        "height": 330,
        "initial_notification": "",
        "show": false,
        "status_displays": [
            {
                "details": "Patience is a virtue...",
                "icon": "image:logo",
                "id": "mailpile",
                "title": "Mailpile is starting up"
            },
            {
                "icon": "image:logged-out",
                "id": "logged-in",
                "title": "You are not logged in"
            },
            {
                "details": "Enable remote access if you would like to access\nMailpile from your phone or another computer.",
                "icon": "image:ra-off",
                "id": "remote_access",
                "title": "Remote access is disabled"
            }
        ],
        "width": 550
    }
}
